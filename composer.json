{
    "name": "firehed/simplelogger",
    "description": "PHP write logs",
    "homepage": "https://github.com/firehed/simpleLogger",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Eric Stern"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "psr/log": "~1.0"
    },
    "autoload": {
        "psr-4": {"SimpleLogger\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {
          "SimpleLogger\\": "tests/"
        }
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.0",
        "phpstan/phpstan": "^0.9.2",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "scripts": {
        "test": [
          "@phpunit",
          "@phpstan",
          "@phpcs"
        ],
        "coverage": "phpunit --coverage-html coverage; open coverage/index.html",
        "autofix": "phpcbf src tests",
        "phpunit": "phpunit",
        "phpstan": "phpstan analyse --no-progress -l7 src tests",
        "phpcs": "phpcs src tests"
    }
}
